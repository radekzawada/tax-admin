<div class="title-header">
  <div class="row">
    <div class="col-sm-9 d-flex align-items-center">
      <h4><%= content_for(:page_header) || t("app_name") %></h4>
    </div>
    <div class="col-sm-3 d-flex justify-content-end">
      <%= content_for(:page_actions) %>
    </div>
  </div>
  <hr>
  <div class="flash">
    <% if notice.present? %><div class="alert alert-success" role="alert"><%= notice %></div><% end %>
    <% if alert.present? %><div class="alert alert-danger" role="alert"><%= alert %></div><% end %>
  </div>
</div>
